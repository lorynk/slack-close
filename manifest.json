{
  "manifest_version": 2,

  "name": "Slack Closer",
  "description": "This extension automatically closes the launched window from Slack links.",
  "version": "1.0",

  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "content_scripts": [
    {
      "matches": [
        "https://*.slack.com/archives/*",
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
